{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2021",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "server/types/*"
      ]
    }
  },
  "include": [
    "server/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
